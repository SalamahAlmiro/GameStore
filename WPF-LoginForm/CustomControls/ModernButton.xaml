<UserControl x:Class="WPF_LoginForm.CustomControls.ModernButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">

    <Button BorderThickness="0"
            Foreground="White"
            FontSize="12"
            FontFamily="Montserrat"
            Cursor="Hand"
            Click="InternalButton_Click">

        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="#4a6b23"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#7a9f23 "/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border 
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                    <ContentPresenter VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Content="{Binding ButtonContent, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                        
                </Border>
            </ControlTemplate>
        </Button.Template>       
    </Button>
</UserControl>
