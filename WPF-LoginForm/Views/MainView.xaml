<Window x:Class="WPF_LoginForm.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LoginForm.Views"
        xmlns:viewModel="clr-namespace:WPF_LoginForm.ViewModels"
        xmlns:view="clr-namespace:WPF_LoginForm.Views"
        xmlns:customControls="clr-namespace:WPF_LoginForm.CustomControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Border Background="#1b2838" CornerRadius="10" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label 
                   Content="{Binding CurrentUserAccount.DisplayName}" 
                   Foreground="White"
                   Height="40" 
                   Width="150"
                   Margin="10,452,40,-17"
                   Padding="0,0,5,0" Grid.Row="1"/>

            <Button x:Name="btnMinimize"                           
                            BorderThickness="0"
                            Content="-"
                            FontFamily="Montserrat"
                            Foreground="White"
                            FontSize="16"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click" Margin="311,-21,-311,21">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Gray"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="18" Height="18"
                                CornerRadius="9"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="btnClose"                          
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnClose_Click" Margin="334,-21,-334,21">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Red"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="OrangeRed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="18" Height="18"
                                CornerRadius="9"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Text="Project VP"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="25, 0,0,10"
                       FontSize="30"
                       Foreground="White"/>

            <StackPanel Grid.Row="1">

                <RadioButton Content="Store" 
                             IsChecked="True"
                             Height="50"
                             FontSize="20"
                             Command="{Binding StoreViewCommand}">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Setters>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Grid VerticalAlignment="Stretch"
                                                   HorizontalAlignment="Stretch"
                                                    Background="{TemplateBinding Background}">

                                                <TextBlock Text="{TemplateBinding Property=Content}"
                                                            VerticalAlignment="Center"
                                                            Margin="20,0,0,0"/>


                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style.Setters>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="#346898"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>

                <RadioButton Content="Library" 
                             Height="50"
                             FontSize="20"
                             Command="{Binding LibraryViewCommand}">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Setters>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Grid VerticalAlignment="Stretch"
                                   HorizontalAlignment="Stretch"
                                    Background="{TemplateBinding Background}">

                                                <TextBlock Text="{TemplateBinding Property=Content}"
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0"/>


                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style.Setters>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="#346898"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>

                <RadioButton Content="Discounts" 
                             Height="50"
                             FontSize="20"
                             Command="{Binding DiscountViewCommand}">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Setters>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Grid VerticalAlignment="Stretch"
                                   HorizontalAlignment="Stretch"
                                    Background="{TemplateBinding Background}">

                                                <TextBlock Text="{TemplateBinding Property=Content}"
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0"/>


                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style.Setters>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="#346898"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>



            </StackPanel>

            <ContentControl
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

        </Grid>
    </Border>
</Window>
