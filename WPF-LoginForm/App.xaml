<Application x:Class="WPF_LoginForm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_LoginForm"
             xmlns:viewModel="clr-namespace:WPF_LoginForm.ViewModels"
             xmlns:view="clr-namespace:WPF_LoginForm.Views"
             Startup="ApplicationStart">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewModel:LibraryViewModel}">
                <view:LibraryView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:StoreViewModel}">
                <view:StoreView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:DiscountsViewModel}">
                <view:DiscountsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
